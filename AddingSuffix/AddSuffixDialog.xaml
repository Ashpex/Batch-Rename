<Window x:Class="AddingSuffixRules.AddSuffixDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddingSuffixRules"
        mc:Ignorable="d"
        Title="AddSuffixDialog" Height="450" Width="800">
    <Canvas>
        <Label Content="Add Suffix Action Dialog" Canvas.Left="251" Canvas.Top="28" FontWeight="Bold" FontSize="20" Width="279" HorizontalContentAlignment="Center"/>
        <Label Content="Input String To Add: " FontSize="20" Width="223" Canvas.Left="93" Canvas.Top="126"/>

        <TextBox FontSize="20" Name="strNeedToAdd" Height="38" Width="240" Canvas.Left="339" Canvas.Top="126" RenderTransformOrigin="0.145,0.807"/>

        <Button  Name="SubmitButton" Click="SubmitButton_Click" Canvas.Left="251" Canvas.Top="270" Height="32" Width="100">
            <TextBlock TextAlignment="Center" Text="Submit" FontSize="20" RenderTransformOrigin="-0.262,-0.892"/>
        </Button>
        <Button  Name="CancelButton" Click="CancelButton_Click" Canvas.Left="451" Canvas.Top="270" Height="32" Width="100">
            <TextBlock TextAlignment="Center" Text="Cancel"  FontSize="20"/>
        </Button>

    </Canvas>
</Window>
